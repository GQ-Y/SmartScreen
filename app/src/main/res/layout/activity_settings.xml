<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/tech_background"
    tools:context=".ui.SettingsActivity">

    <!-- 左侧菜单导航 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="32dp"
        android:background="#1A000000">

        <!-- 设置标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <!-- 菜单项容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 系统设置菜单项 -->
            <LinearLayout
                android:id="@+id/menu_system_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/settings_menu_selector"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@android:color/white"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统设置"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- 关于设备菜单项 -->
            <LinearLayout
                android:id="@+id/menu_about_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/settings_menu_selector"
                android:focusable="true"
                android:clickable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tv"
                    android:tint="@android:color/white"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于设备"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 右侧内容区域 -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="32dp">

        <!-- 系统设置内容 -->
        <LinearLayout
            android:id="@+id/system_settings_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统设置"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- 服务器配置 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务器配置"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="服务器 IP:"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/ip_address_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="192.168.1.100"
                    android:inputType="text"
                    android:textColor="@android:color/white"
                    android:textColorHint="#CCCCCC"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:maxLines="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:longClickable="false"
                    android:textIsSelectable="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="端口:"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_server_port"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="9502"
                    android:text="9502"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textColorHint="#CCCCCC"
                    android:backgroundTint="@android:color/white"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:longClickable="false"
                    android:textIsSelectable="false"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save_settings"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:text="保存设置"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/save_button_selector"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:focusable="true"/>

        </LinearLayout>

        <!-- 关于设备内容 -->
        <LinearLayout
            android:id="@+id/about_device_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于设备"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- 设备信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备信息"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应用名称: 智慧屏"
                    android:textColor="#CCCCCC"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本: 1.0.0"
                    android:textColor="#CCCCCC"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_device_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备型号: Android TV"
                    android:textColor="#CCCCCC"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_android_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android版本: "
                    android:textColor="#CCCCCC"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- 版权信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版权信息"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="© 2024 HOOK.DESIGN"
                    android:textColor="#CCCCCC"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任意屏，任意门，任意显示"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:alpha="0.7"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout> 